<!DOCTYPE html>
<html>
<head>
    <title>Blog_View</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="main-container">
        <h1>tampokLokal_BlogPosts</h1>
        <a href="/new">( + New )</a>
        <ul>
        <% posts.forEach(post => { %>
            <li class="blog-post">
                <h2><%= post.title %></h2>
                <p><%= post.content %></p>
                <a href="/edit/<%= post._id %>" id="edit">Edit</a>
                <a href="/delete/<%= post._id %>" onclick="return confirm('>> Are you sure?');" id="delete">Delete</a>
            </li>
        <% }); %>
        </ul>
    </div>
</body>
</html>